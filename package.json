{
  "name": "numark",
  "version": "1.0.1",
  "release": {
    "date": "2025-08-20",
    "state": "on development"
  },
  "description": "A highly flexible static page framework that delivers modern, responsive HTML5 websites from Markdown content",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "numark": "./bin/cli.js"
  },
  "scripts": {
    "start": "node src/server/dev-server.js",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build-site": "node src/build/index.js",
    "serve": "node src/server/dev-server.js",
    "cli": "node bin/cli.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext js,jsx --fix",
    "demo:build": "node src/build/index.js build",
    "demo:dev": "node src/server/dev-server.js",
    "demo:clean": "node src/build/index.js clean"
  },
  "keywords": [
    "static-site-generator",
    "markdown",
    "react",
    "tailwindcss",
    "jamstack",
    "cms",
    "blog",
    "website-builder"
  ],
  "author": "NuMark Team",
  "license": "AGPL-3.0",
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^1.2.2",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-tabs": "^1.0.4",
    "autoprefixer": "^10.4.15",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "commander": "^11.0.0",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.3",
    "gray-matter": "^4.0.3",
    "inquirer": "^12.9.3",
    "lucide-react": "^0.279.0",
    "mime-types": "^2.1.35",
    "ora": "^7.0.1",
    "postcss": "^8.4.29",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.0",
    "react-router-dom": "^6.15.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "resend": "^6.0.1",
    "sharp": "^0.32.5",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.3.3",
    "ws": "^8.14.0",
    "yaml": "^2.3.2"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jsdom": "^22.1.0",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
